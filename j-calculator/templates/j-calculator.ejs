<div class="calculator-wrapper">

    <div class="languages">
        <% for (var i = 0, language; language = oLanguages[i]; i++) { %>
            <div class="language">
                <label class="calc-block">
                    <input type="radio" name="language<%= id %>" <%= i == 0 ? 'checked' : '' %>>
                    <img src="/j-calculator/img/languages/<%= language %>-active.svg" alt="<%= language %>">
                    <img src="/j-calculator/img/languages/<%= language %>-mute.svg" alt="<%= language %>">
                </label>
            </div>
        <% } %>
    </div>

    <div class="calculator">
        <div class="calc-block calculator-left">
            <div class="calculator-left-top">
                <div class="calculator-left-top-chooser">
                    <div class="calculator-left-top-chooser-left">
                        <input checked type="radio" name="mode<%= id %>" value="balancer" id="balancer<%= id %>">
                        <label for="balancer<%= id %>">
                            Balancer
                            <span class="node-count">
                                <span class="minus-node"></span>
                                <input type="number" max="99" name="balancer-nodes">
                                <span class="plus-node"></span>
                            </span>
                        </label>
                        <input type="radio" name="mode<%= id %>" value="appserver" id="appserver<%= id %>">
                        <label for="appserver<%= id %>">
                            App Server
                            <span class="node-count">
                                <span class="minus-node"></span>
                                <input type="number" max="99" name="appserver-nodes">
                                <span class="plus-node"></span>
                            </span>
                        </label>
                        <input type="radio" name="mode<%= id %>" value="database" id="database<%= id %>">
                        <label for="database<%= id %>">
                            Database
                            <span class="node-count">
                                <span class="minus-node"></span>
                                <input type="number" max="99" name="database-nodes">
                                <span class="plus-node"></span>
                            </span>
                        </label>
                    </div>
                </div>
                <div class="calculator-left-top-scale">
                    <div class="balancer-range">
                        <div class="range-block min-block">
                            <div class="cloudlets-title">
                                <span>Reserved</span>
                                <div class="reserved-cloudlets">
                                </div>
                            </div>
                            <div class="j-relative">
                                <span class="tooltip-button min">i</span>
                                <span class="tooltip-wrapper">
                                    <span class="tooltip-inner">
                                        <span class="title">Reserved Cloudlets</span>
                                        <span class="description">
                                            Reserve the cloudlets to pay a fixed price. The more you reserve, the bigger the discount is!
                                        </span>
                                        <img src="/j-calculator/img/cld-fixed-hybrid.svg" alt="Reserved Cloudlets">
                                    </span>
                                </span>
                                <div class="inner">
                                    <span class="decrease min-block-decrease"></span>
                                    <div class="digits">

                                    </div>
                                    <span class="increase min-block-increase"></span>
                                </div>
                            </div>
                            <span class="dot-line reserved">
                                <span class="dot"></span>
                            </span>
                        </div>
                        <div class="range-block max-block">
                            <div class="cloudlets-title">
                                <span>Reserved</span>
                                <div class="scaling-cloudlets">
                                </div>
                            </div>
                            <div class="j-relative">
                                <span class="tooltip-button max">i</span>
                                <span class="tooltip-wrapper max">
                                    <span class="tooltip-inner">
                                        <span class="title">Scaling Limit</span>
                                    <span class="description">
                                        Define the maximum amount of resources for automatic vertical scaling based on load changes
                                    </span>
                                    <img src="/j-calculator/img/cld-flex-hybrid.svg" alt="Scaling Limit">
                                    </span>
                                </span>
                                <div class="inner">
                                    <span class="decrease max-block-decrease"></span>
                                    <div class="digits">

                                    </div>
                                    <span class="increase max-block-increase"></span>
                                </div>
                            </div>
                            <span class="dot-line sl">
                            <span class="dot"></span>
                        </span>
                        </div>
                        <div class="range-wrapper">
                            <input
                                    data-addui='slider'
                                    data-min='<%= balancerMin %>'
                                    data-max='<%= balancerMax %>'
                                    data-range='true'
                                    data-step='1'
                                    value='<%= balancerReserved %>,<%= balancerScaling %>'
                            />
                        </div>
                    </div>
                    <div class="appserver-range">
                        <div class="range-block min-block">
                            <div class="cloudlets-title">
                                <span>Reserved</span>
                                <div class="reserved-cloudlets"></div>
                            </div>
                            <div class="j-relative">
                                <span class="tooltip-button min">i</span>
                                <span class="tooltip-wrapper">
                                <span class="tooltip-inner">
                                    <span class="title">Reserved Cloudlets</span>
                                    <span class="description">
                                        Reserve the cloudlets to pay a fixed price. The more you reserve, the bigger the discount is!
                                    </span>
                                    <img src="/j-calculator/img/cld-fixed-hybrid.svg" alt="Reserved Cloudlets">
                                </span>
                            </span>
                                <div class="inner">
                                    <span class="decrease min-block-decrease"></span>
                                    <div class="digits"></div>
                                    <span class="increase min-block-increase"></span>
                                </div>
                            </div>
                            <span class="dot-line reserved">
                                <span class="dot"></span>
                            </span>
                        </div>
                        <div class="range-block max-block">
                            <div class="cloudlets-title">
                                <span>Scaling limit</span>
                                <div class="scaling-cloudlets">
                                </div>
                            </div>
                            <div class="j-relative">
                                <span class="tooltip-button max">i</span>
                                <span class="tooltip-wrapper max">
                                <span class="tooltip-inner">
                                    <span class="title">Scaling Limit</span>
                                <span class="description">
                                    Define the maximum amount of resources for automatic vertical scaling based on load changes
                                </span>
                                <img src="/j-calculator/img/cld-flex-hybrid.svg" alt="Scaling Limit">
                                </span>
                            </span>
                                <div class="inner">
                                    <span class="decrease max-block-decrease"></span>
                                    <div class="digits"></div>
                                    <span class="increase max-block-increase"></span>
                                </div>
                            </div>

                            <span class="dot-line sl">
                                <span class="dot"></span>
                            </span>
                        </div>
                        <div class="range-wrapper">
                            <input
                                    data-addui='slider'
                                    data-min='<%= appServerMin %>'
                                    data-max='<%= appServerMax %>'
                                    data-range='true'
                                    data-step='1'
                                    value='<%= appServerReserved %>,<%= appServerScaling %>'
                            />
                        </div>
                    </div>
                    <div class="database-range">
                        <div class="range-block min-block">
                            <div class="cloudlets-title">
                                <span>Reserved</span>
                                <div class="reserved-cloudlets">
                                </div>
                            </div>
                            <div class="j-relative">
                                <span class="tooltip-button min">i</span>
                                <span class="tooltip-wrapper">
                            <span class="tooltip-inner">
                                <span class="title">Reserved Cloudlets</span>
                                <span class="description">
                                    Reserve the cloudlets to pay a fixed price. The more you reserve, the bigger the discount is!
                                </span>
                                <img src="/j-calculator/img/cld-fixed-hybrid.svg" alt="Reserved Cloudlets">
                            </span>
                        </span>
                                <div class="inner">
                                    <span class="decrease min-block-decrease"></span>
                                    <div class="digits">

                                    </div>
                                    <span class="increase min-block-increase"></span>
                                </div>
                            </div>
                            <span class="dot-line reserved">
                            <span class="dot"></span>
                        </span>
                        </div>
                        <div class="range-block max-block">
                            <div class="cloudlets-title">
                                <span>Reserved</span>
                                <div class="scaling-cloudlets">
                                </div>
                            </div>
                            <div class="j-relative">
                                <span class="tooltip-button max">i</span>
                                <span class="tooltip-wrapper max">
                            <span class="tooltip-inner">
                                <span class="title">Scaling Limit</span>
                            <span class="description">
                                Define the maximum amount of resources for automatic vertical scaling based on load changes
                            </span>
                            <img src="/j-calculator/img/cld-flex-hybrid.svg" alt="Scaling Limit">
                            </span>
                        </span>
                                <div class="inner">
                                    <span class="decrease max-block-decrease"></span>
                                    <div class="digits">

                                    </div>
                                    <span class="increase max-block-increase"></span>
                                </div>
                            </div>
                            <span class="dot-line sl">
                            <span class="dot"></span>
                        </span>
                        </div>
                        <div class="range-wrapper">
                            <input
                                    data-addui='slider'
                                    data-min='<%= databaseMin %>'
                                    data-max='<%= databaseMax %>'
                                    data-range='true'
                                    data-step='1'
                                    value='<%= databaseReserved %>,<%= databaseScaling %>'
                            />
                        </div>
                    </div>
                </div>
            </div>
            <div class="calculator-left-bottom">
                <div class="calculator-left-bottom-block">
                    <p>Disk Space, GB</p>
                    <div class="inner">
                        <span class="minus"></span>
                        <label class="count">
                            <input type="number" class="digit" value="10" name="storage" max="99999">
                        </label>
                        <span class="plus"></span>
                    </div>
                </div>
                <div class="calculator-left-bottom-block">
                    <p>Public IP</p>
                    <div class="inner">
                        <span class="minus"></span>
                        <label class="count">
                            <input type="number" class="digit" value="1" name="ip" max="99" step="1">
                        </label>
                        <span class="plus"></span>
                    </div>
                </div>
                <div class="calculator-left-bottom-block">
                    <p class="j-relative">External Traffic, GB
                        <span class="tooltip-button max">i</span>
                        <span class="tooltip-wrapper max">
                            <span class="tooltip-inner">
                                <span class="title">Amount of external traffic <br> spent per month.</span>
                            </span>
                        </span>
                    </p>
                    <div class="inner">
                        <span class="minus"></span>
                        <label class="count">
                            <input type="number" class="digit" value="10" name="traffic" max="99999">
                        </label>
                        <span class="plus"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="calc-block calculator-right">
            <div class="calculator-right-top">
                <p class="total">Total Cloudlets:</p>
                <div class="totals-wrapper">
                    <div class="totals reserved-totals">
                        <div class="totals-left">
                            <span class="totals-title">Reserved</span>
                            <span class="gibs">0</span>,&nbsp;
                            <span class="ghz">0</span>
                        </div>
                        <div class="totals-right">
                            <span class="balancer">0</span>
                            +
                            <span class="appserver">0</span>
                            +
                            <span class="database">0</span>
                            =
                            <span class="cloudlets-total">0</span>
                        </div>
                    </div>
                    <div class="totals scaling-totals">
                        <div class="totals-left">
                            <span class="totals-title">Scaling Limit</span>
                            <span class="gibs">0</span>,&nbsp;
                            <span class="ghz">0</span>
                        </div>
                        <div class="totals-right">
                            <span class="balancer">0</span>
                            +
                            <span class="appserver">0</span>
                            +
                            <span class="database">0</span>
                            =
                            <span class="cloudlets-total">0</span>
                        </div>
                    </div>
                </div>
                <div class="currency-period">
                    <div class="radio-block">
                        <input type="radio" id="hour<%= id %>" name="price<%= id %>" value="hourly">
                        <label for="hour<%= id %>">Per Hour</label>
                        <input type="radio" id="month<%= id %>" name="price<%= id %>" value="monthly">
                        <label for="month<%= id %>">Per Month</label>
                    </div>
                    <div class="current-switcher-wrapper">
                        <select class="current-switcher">
                            <% for (var i = 0, currency; currency = currencies[i]; i++) { %>
                                <option value="<%= currency.code %>" data-name="<%= currency.name %>"
                                        data-sign="<%= currency.sign %>"><%= currency.code %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="period">
                <div class="start-price">
                    <p>Starting Price</p>
                    <span class="price">$0</span>
                </div>
                <div class="max-price">
                    <p>
                        Maximum Price
                        <span>
                        if all resources are fully used up to Scaling Limit
                    </span>
                    </p>
                    <span class="price">$0</span>
                </div>
            </div>
        </div>
    </div>

</div>